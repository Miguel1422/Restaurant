<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">


            <ImageView
                android:id="@+id/producto_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/producto_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/producto_photo"
                android:textSize="16sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/producto_cantidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textSize="16sp"
                tools:text="Name" />

            <TextView
                android:id="@+id/descripcion_pedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/producto_name"
                android:layout_toEndOf="@+id/producto_photo" />


            <Button
                android:id="@+id/button_delete"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/btn_eliminar"
                android:textColor="?android:attr/colorEdgeEffect" />


            <Button
                android:id="@+id/button_edit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toLeftOf="@+id/button_delete"
                android:text="@string/button_edit"
                android:textColor="?android:attr/colorPressedHighlight" />

            <ListView
                android:id="@+id/lv_pedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/producto_photo"
                android:layout_below="@+id/producto_photo"
                android:layout_toStartOf="@+id/button_edit" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

