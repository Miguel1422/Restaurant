<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="localhost"
        android:inputType="textCapWords"
        android:key="server_name"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="@string/servidor_summary"
        android:title="@string/servidor" />
    <PreferenceCategory android:title="Pedidos">
        <SwitchPreference
            android:defaultValue="true"
            android:key="mostrar_categoria_pedido"
            android:summary="@string/pref_mostrar"
            android:title="Mostrar categoria en pedidos" />
    </PreferenceCategory>


</PreferenceScreen>
